# Netlify redirects for Single Page Application (SPA)
# This ensures all routes are handled by the React app

# SPA fallback - redirect all routes to index.html
/*    /index.html   200

# Security headers
/api/*    /api/:splat    200
/assets/*    /assets/:splat    200

# Cache static assets
/static/*    /static/:splat    200    Cache-Control: public, max-age=31536000, immutable

# Service Worker
/sw.js    /sw.js    200    Cache-Control: public, max-age=0

# Manifest
/manifest.json    /manifest.json    200    Cache-Control: public, max-age=86400